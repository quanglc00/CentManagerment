
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_BannerAdmin.cshtml";
    var listAccount = (List<CentManagerment.BU.DTO.UserManagerDTO>)ViewData["ListAccount"];
    var dem = 0;
}

<div class="content-wrapper">
    <div class="content-header content-header-wrap">
        <h1 class="fleft">Nhân viên</h1><a class="btn--primary__edit btn--add" href="nhanvien-themmoi.html">Thêm mới</a>
        <div class="clearfix"></div>
    </div>
    <section class="nhanvien" id="nhanvien">
        <div class="section-top3 section-top3-wrap">
            <div class="section-top3__content">
                <div class="row-section">
                    <div class="section-top3__menu">
                        <ul class="list-inline">
                            <li class="active"><a href="quanlytaikhoan-taikhoan.html">Tất cả<span class="number1">(4)</span></a></li>
                            <li><a href="nhanvien-hoatdong.html">Hoạt động<span class="number1">(4)</span></a></li>
                            <li><a href="nhanvien-chuakichhoat.html">Chưa kích hoạt<span class="number1">(4)</span></a></li>
                            <li><a href="nhanvien-bian.html">Bị ẩn<span class="number1">(4)</span></a></li>
                            <li><a href="nhanvien-thungrac.html">Thùng rác<span class="number1">(4)</span></a></li>
                        </ul>
                    </div>
                </div>
                <div class="row-section">
                    <div class="section-top3__control">
                        <form action="" name="control">
                            <div class="form__row-top">
                                <div class="form__row-top__item">
                                    <input class="border--base padding" type="text" placeholder="Từ khóa tìm kiếm" />
                                </div>
                                <div class="form__row-top__item">
                                    <select name="">
                                        <option value="">Chọn vai trò</option>
                                        <option value="">Nhân viên</option>
                                        <option value="">Quản trị viên</option>
                                    </select>
                                </div>
                                <div class="form__row-top__item">
                                    <div class="section-top__control--fromdate">
                                        <span>
                                            Từ ngày
                                            <div class="fromDate">
                                                <i class="fa fa-calendar"></i>
                                                <input class="padding border--base" id="datepicker1" type="text" required="required" />
                                            </div>
                                        </span>
                                    </div>
                                </div>
                                <div class="form__row-top__item">
                                    <div class="section-top__control--todate">
                                        <span>
                                            Đến ngày
                                            <div class="toDate">
                                                <i class="fa fa-calendar"></i>
                                                <input class="padding border--base" id="datepicker2" type="text" required="required" />
                                            </div>
                                        </span>
                                    </div>
                                </div>
                                <div class="form__row-top__item">
                                    <input class="submit-control border--base" type="submit" value="Lọc" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!--.section-top3-wrap-->
        <div class="section-top2 section-top2-wrap">
            <div class="row-section">
                <form action="" name="action">
                    <select class="padding border--base" id="action" name="action">
                        <option value="">Tác vụ</option>
                        <option value="">option 1</option>
                        <option value="">option 1</option>
                        <option value="">option 1</option>
                        <option value="">option 1</option>
                    </select>
                    <button class="submit-action border--base">Áp dụng</button>
                </form><span class="total-file"><span class="total--title">Tổng số:</span><span class="total-file2">4 </span>mục</span>
            </div>
        </div>
        <div class="list-rent__content section-table table-extend doanhnghiep__table">
            <table>
                <tr>
                    <th>
                        <input class="total-checkbox" id="total-checkbox" type="checkbox" value="total" />
                    </th>
                    <th>Mã Tài Khoản</th>
                    <th>Tài khoản</th>
                    <th>Họ tên</th>
                    <th> Số điện thoại</th>
                    <th>Email</th>
                    <th>Vai trò</th>
                    <th>Ngày tạo</th>
                    <th>Trạng thái  </th>
                    <th>Tùy chọn</th>
                </tr>
                @foreach (var item in listAccount)
                {
                    var status = "";
                    if (item.UserStatus == 1)
                    {
                        status = "Hoạt Động";
                    }
                    else if (item.UserStatus == 2)
                    {
                        status = "Chưa Kích Hoạt";
                    }
                    else if (item.UserStatus == 3)
                    {
                        status = "Bị Ẩn";
                    }
                    <tr>
                        <td>
                            <input class="item-checkbox" type="checkbox" value="item" />
                        </td>
                        <td>@item.UserId</td>
                        <td>@item.UserAccount</td>
                        <td>@item.UserName</td>
                        <td>@item.UserPhone</td>
                        <td><span>@item.UserEmail</span></td>
                        <td>Quản Lý</td>
                        <td>@item.UserCreateDate</td>
                        <td>@status</td>
                        <td>
                            <span class="icon-menu">
                                <i class="fa fa-plus-circle"></i>
                                <ul>
                                    <li>Sửa nhanh</li>
                                    <li>Nhân bản</li>
                                    <li>Bỏ thùng rác</li>
                                </ul>
                            </span>
                        </td>
                    </tr>
                    <tr>
                        <td class="row-edit row-edit2 white disabled" colspan="10">
                            <div class="text-left">
                                <h3>Chỉnh sửa nhân viên <span>@item.UserName</span></h3>
                                <form class="form__table--detail" action="">
                                    <div class="form__table--content">
                                        <div class="form__table-col-33">
                                            <label for="">Mã nhân viên:</label><span>@item.UserId</span>
                                            <input type="hidden" class="UserId" value=@item.UserId />
                                        </div>
                                        <div class="form__table-col-33">
                                            <label for="">Tên tài khoản:</label><span>@item.UserAccount</span>
                                        </div>
                                        <div class="form__table-col-33">
                                            <label for="">Vai trò:</label>
                                            <select>
                                                <option value="">--Chọn vai trò--</option>
                                                <option value="">Nhân viên</option>
                                                <option value="">Quản trị viên</option>
                                            </select>
                                        </div>
                                        <div class="form__table-col-6">
                                            <label for="">Ngày đăng ký:</label>
                                            <input type="text" class="UserCreateDate" value=@item.UserCreateDate />
                                        </div>
                                        <div class="form__table-col-6">
                                            <label for="">Trạng thái:</label>
                                            <select>
                                                <option value="">Hoạt động</option>
                                                <option value="">Chưa kích hoạt</option>
                                                <option value="">Bị ẩn</option>
                                            </select>
                                        </div>
                                        <div class="form__table-col-6">
                                            <label for="">Số điện thoại:</label>
                                            <input type="text" class="UserPhone" value=@item.UserPhone />
                                        </div>
                                        <div class="form__table-col-6">
                                            <label for="">Email:</label>
                                            <input type="text" class="UserEmail" value=@item.UserEmail />
                                        </div>
                                        <div class="form__table-col-6">
                                            <label for="">Mật khẩu mới:</label>
                                            <input class="UserPassword" type="password" />
                                        </div>
                                        <div class="form__table-col-6">
                                            <label for="">Nhập lại mật khẩu: </label>
                                            <input type="password" />
                                        </div>
                                    </div>
                                    <div class="fixed__button text-right">
                                        <input type="reset" value="Hủy" />
                                        <input type="submit" value="Lưu chỉnh sửa" onclick="updateAccount(@dem)" />
                                    </div>
                                </form>
                            </div>
                        </td>
                    </tr>
                    dem++;
                }
            </table>
            <div class="list-rent__bottom">
                <div class="list-rent__bottom--content section-buttons text-right">
                    <span class="total-file">147 mục</span>
                    <button><i class="fa fa-angle-double-left"></i></button>
                    <button><i class="fa fa-angle-left"></i></button><span>1 trên 8</span>
                    <button><i class="fa fa-angle-right"></i></button>
                    <button><i class="fa fa-angle-double-right">     </i></button>
                </div>
            </div>
        </div>
    </section>
</div>