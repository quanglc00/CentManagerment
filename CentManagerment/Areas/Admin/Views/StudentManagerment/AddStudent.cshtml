                    <option value="stt1">Hoạt động</option>
                    <option value="stt2">Hoạt động</option>
                    <option value="stt3">Hoạt động</option>
                </select>
            </div>
            <div class="clear-fix"></div>
        </div>*@

            <div class="nhanvien-chinhsua__btn">
                <button class="btn btn-primary btn--luu" type="button" id="addst">Thêm sinh viên</button>
                <button class="btn btn-primary btn--xoa" type="reset">Hủy</button>
            </div>
        </form>
    </div>
</section>

