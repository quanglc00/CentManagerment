@model CentManagerment.BU.DTO.CourseDTO

@{
    ViewBag.Title = "InsertView";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>InsertView</h2>

@using (Html.BeginForm("Insert", "CourseManagerment", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <section class="nhanvien-chinhsua" id="nhanvien-chinhsua">
        <div class="nhanvien-chinhsua__header">
            <h2>Thêm khoá học</h2>
        </div>
        <div class="nhanvien-chinhsua__content">
            <form id="nv-add" action="">
                <div class="form-group nhanvien-chinhsua__input">
                    <label class="fleft">Thời gian học</label>
                    <div class="input-box fleft">
                        <input class="form-control" type="text" name="CourseTime" />
                    </div>
                    <div class="clear-fix"></div>
                </div>
                <div class="form-group nhanvien-chinhsua__input">
                    <label class="fleft">Tên khóa học</label>
                    <div class="input-box fleft">
                        <input class="form-control" type="text" name="CourseName" />
                    </div>
                    <div class="clear-fix"></div>
                </div>
                <div class="form-group nhanvien-chinhsua__input">
                    <label class="fleft">Học phí</label>
                    <div class="input-box fleft">
                        <input class="form-control" type="text" name="CousePrice" />
                    </div>
                    <div class="clear-fix"></div>
                </div>
                <div class="nhanvien-chinhsua__btn">
                    <button class="btn btn-primary btn--luu" type="submit">Thêm khóa học</button>
                    <button class="btn btn-primary btn--xoa" type="submit">@Html.ActionLink("Hủy", "Index")</button>
                </div>
            </form>
        </div>
    </section>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
