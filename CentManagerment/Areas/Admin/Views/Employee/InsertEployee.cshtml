
@{
    ViewBag.Title = "InsertEployee";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="nhanvien-chinhsua" id="nhanvien-chinhsua">
    <div class="nhanvien-chinhsua__header">
        <h2>Thêm nhân viên</h2>
    </div>
    <div class="nhanvien-chinhsua__content">
        <form id="nv-add" action="">
            <div class="form-group nhanvien-chinhsua__input">
                <label class="fleft">Tên tài khoản</label>
                <div class="input-box fleft">
                    <input class="form-control UserName" type="text" name="username" />
                </div>
                <div class="clear-fix"></div>
            </div>
            <div class="form-group nhanvien-chinhsua__input">
                <label class="fleft">Họ và tên</label>
                <div class="input-box fleft">
                    <input class="form-control FullName" type="text" name="name" />
                </div>
                <div class="clear-fix"></div>
            </div>
            <div class="form-group nhanvien-chinhsua__input">
                <label class="fleft">Mật khẩu</label>
                <div class="input-box fleft">
                    <input class="form-control" type="text" name="pass" />
                </div>
                <div class="clear-fix"></div>
            </div>
            <div class="form-group nhanvien-chinhsua__input">
                <label class="fleft">Nhập lại mật khẩu</label>
                <div class="input-box fleft">
                    <input class="form-control" type="text" name="pass2" />
                </div>
                <div class="clear-fix"></div>
            </div>
            <div class="form-group nhanvien-chinhsua__input">
                <label class="fleft">Vai trò</label>
                <div class="input-box fleft">
                    <select class="form-control" name="vaitro">
                        <option value="nv">Nhân viên</option>
                        <option value="ql">Nhân viên</option>
                        <option value="tk">Nhân viên                        </option>
                    </select>
                </div>
                <div class="clear-fix"></div>
            </div>
            <div class="form-group nhanvien-chinhsua__input">
                <label class="fleft">Trạng thái</label>
                <div class="input-box fleft">
                    <select class="form-control" name="status">
                        <option value="stt1">Hoạt động</option>
                        <option value="stt2">Hoạt động</option>
                        <option value="stt3">Hoạt động                        </option>
                    </select>
                </div>
                <div class="clear-fix"></div>
            </div>
            <div class="form-group nhanvien-chinhsua__input">
                <label class="fleft">Mô tả</label>
                <div class="input-box fleft">
                    <textarea class="form-control" name="describe" cols="30" rows="10" id="describe">                   </textarea>
                </div>
                <div class="clear-fix"></div>
            </div>
            <div class="nhanvien-chinhsua__btn">
                <button class="btn btn-primary btn--luu" type="submit">Tạo tài khoản</button>
                <button class="btn btn-primary btn--xoa" type="submit">Hủy</button>
            </div>
        </form>
    </div>
</section>

