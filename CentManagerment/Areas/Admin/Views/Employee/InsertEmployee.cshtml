
@{
    ViewBag.Title = "InsertEployee";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="nhanvien-chinhsua" id="nhanvien-chinhsua">
    <div class="nhanvien-chinhsua__header">
        <h2>Thêm nhân viên</h2>
    </div>
    <div class="nhanvien-chinhsua__content">
        <form id="nv-add" action="">
            <div class="form-group nhanvien-chinhsua__input">
                <label class="fleft">Tên tài khoản</label>
                <div class="input-box fleft">
                    <input class="form-control UserName" type="text" name="username" />
                </div>
                <div class="clear-fix"></div>
            </div>
            <div class="form-group nhanvien-chinhsua__input">
                <label class="fleft">Họ và tên</label>
                <div class="input-box fleft">
                    <input class="form-control FullName" type="text" name="name" />
                </div>
                <div class="clear-fix"></div>
            </div>
            <div class="form-group nhanvien-chinhsua__input">
                <label class="fleft">Số điện thoại</label>
                <div class="input-box fleft">
                    <input class="form-control UserPhoneNumber" type="text" name="name" />
                </div>
                <div class="clear-fix"></div>
            </div>
            <div class="form-group nhanvien-chinhsua__input">
                <label class="fleft">Mật khẩu</label>
                <div class="input-box fleft">
                    <input class="form-control UserPassword" type="password" name="pass" />
                </div>
                <div class="clear-fix"></div>
            </div>
            <div class="form-group nhanvien-chinhsua__input">
                <label class="fleft">Nhập lại mật khẩu</label>
                <div class="input-box fleft">
                    <input class="form-control RePassword" type="password" name="pass2" />
                </div>
                <div class="clear-fix"></div>
            </div>
            <div class="form-group nhanvien-chinhsua__input">
                <label class="fleft">Vai trò</label>
                <div class="input-box fleft">
                    <select class="form-control UserType" name="vaitro">
                        <option value="">--Chọn Vai Trò--</option>
                        <option value="1">Người Quản Trị</option>
                        <option value="2">Nhân viên</option>
                    </select>
                </div>
                <div class="clear-fix"></div>
            </div>
            <div class="nhanvien-chinhsua__btn">
                <button class="btn btn-primary btn--luu InsertEmployee" type="button">Tạo tài khoản</button>
                <button class="btn btn-primary btn--xoa" type="reset">Hủy</button>
            </div>
        </form>
    </div>
</section>

