@model CentManagerment.BU.DTO.ClassDTO

@{
    /**/

    ViewBag.Title = "UpdateView";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Update", "ClassManagerment", FormMethod.Post))
{
    <section class="nhanvien-chinhsua" id="nhanvien-chinhsua">
        <div class="nhanvien-chinhsua__header">
            <h2>Sửa lớp học</h2>
        </div>
        <div class="nhanvien-chinhsua__content">
            <form id="nv-add" action="">
                @Html.HiddenFor(model => model.ClassId)

                <div class="form-group nhanvien-chinhsua__input">
                    <label class="fleft">Tên lớp</label>
                    <div class="input-box fleft">
                        @Html.EditorFor(model => model.ClassName, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="clear-fix"></div>
                </div>
                <div class="form-group nhanvien-chinhsua__input">
                    <label class="fleft">Số học sinh trong một lớp</label>
                    <div class="input-box fleft">
                        @Html.EditorFor(model => model.ClassAmountStudent, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="clear-fix"></div>
                </div>
                <div class="form-group nhanvien-chinhsua__input">
                    <label class="fleft">Tên khóa học</label>
                    <div class="input-box fleft">
                        @Html.DropDownList("CourseDTO.CourseName", (IEnumerable<SelectListItem>)ViewBag.CourseName, "-- Chọn tên khóa học --", new { @class = "form-control", @id = "courseId" })
                    </div>
                    <div class="clear-fix"></div>
                </div>
                <div class="form-group nhanvien-chinhsua__input">
                    <label class="fleft">Mã khóa học</label>
                    <div class="input-box fleft">
                        @Html.EditorFor(model => model.ClassCourseId, new { htmlAttributes = new { @class = "form-control", @id = "Id" } })
                    </div>
                    <div class="clear-fix"></div>
                </div>
                <div class="form-group nhanvien-chinhsua__input">
                    <label class="fleft">Thời gian học</label>
                    <div class="input-box fleft">
                        @Html.EditorFor(model => model.CourseDTO.CourseTime, new { htmlAttributes = new { @class = "form-control", @id = "courseTime" } })
                    </div>
                    <div class="clear-fix"></div>
                </div>

                <div class="form-group nhanvien-chinhsua__input">
                    <label class="fleft">Học phí</label>
                    <div class="input-box fleft">
                        @Html.EditorFor(model => model.CourseDTO.CousePrice, new { htmlAttributes = new { @class = "form-control", @id = "coursePrice" } })
                    </div>
                    <div class="clear-fix"></div>
                </div>
                <div class="nhanvien-chinhsua__btn">
                    <button class="btn btn-primary btn--luu" type="submit" onclick="alert('Sửa thành công !!')">Sửa lớp học</button>
                    <button class="btn btn-primary btn--xoa" type="submit">@Html.ActionLink("Hủy", "Index")</button>
                </div>
            </form>
        </div>
    </section>
}